{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": false,

    "outDir": "dist",
    "rootDir": "src",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,

    "stripInternal": true,
    "incremental": true
  },
  "include": ["src"],
  "exclude": [
    "**/__tests__/**",
    "**/*.test.*",
    "**/*.spec.*",
    "**/fixtures/**",
    "**/docs/**",
    "dist",
    "node_modules",
    "coverage"
  ]
}
